<div class="container">
  <div class="row d-flex justify-content-end my-4 mr-4">
    <button id="getposition" onclick="getPosition();">現在位置を取得する</button>
  </div>
  <div class="row d-flex justify-content-center">
    <div class="col-12 col-sm-4 order-2 order-sm-1" id="store-details">
      <div class="row py-5 mr-sm-4">
        <div class="card w-70 mx-auto mt-4 mb-4 shadow-lg">
          <div class="card-body">
            <div class="row d-flex justify-content-center mb-2">
              <%= image_tag asset_path('no_image.jpg'), size: "200x200", id: "store_image" %>
            </div>
            <div>
              <a href="/stores/0" class="text-dark" id="store_id">
                <i class="fa-solid fa-flag mr-2"></i><strong><span id="store_name">store_name</span></strong>
              </a>
              <div><i class="fa-solid fa-location-dot mr-2"></i><span id="address">address</span></div>
              <div><i  class="fa-solid fa-phone mr-2"></i><span id="phone_number">phone_number</span></div>
              <div><i class="fa-solid fa-at mr-2"></i><span id="store_url">store_url</span></div>
              <div class="store_info mt-2"><span id="store_info">store_info</span></div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-12 col-sm-8 order-1 order-sm-2" id="map"></div>
  </div>
</div>

<%= javascript_pack_tag 'map', 'data-turbolinks-track': 'reload' %>