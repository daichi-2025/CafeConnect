<h1>投稿編集</h1>
<%= form_with model: @post, url: post_path(@post.id), method: :patch do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>
  
  <h4>本文</h4>
  <%= f.text_area :body %>

  <h4>投稿画像</h4>
  <% if @post.post_image.attached? %>
    <%= image_tag @post.post_image, size: "50x50" %>
  <% end %>
  
  <%= f.file_field :post_image, accept: "image/*" %>
  
  <%= f.submit '保存' %>
  
<% end %>

