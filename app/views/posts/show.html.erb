<div class="container d-flex justify-content-center mt-4">
  <h2>投稿詳細</h2>
</div>

<div class="card-list-container py-5">
  <div class="card w-50 mx-auto mt-4 mb-4 shadow-lg">
    <div class="card-body">
      <div class="row">
        <div class="col-9">
          <p class="card-text">タイトル：<%= @post.title %></p>
          <p class="card-text">本文：<%= @post.body %></p>
        </div>    
        <div class="col-3">
          <% if @post.post_image.attached? %>
            <%= image_tag @post.post_image, size: "170x170" %>
          <% else %>
            <%= image_tag 'no_image', size: "170x170" %>
          <% end %>
        </div>
      </div>
      <div class="row mt-4">
        <div class="col-10"></div>
        <div class="col-2">
          <span>
            <%= link_to "編集", edit_post_path(@post.id) %>  |  
            <%= link_to "削除", new_store_registration_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
          </span>
        </div>
      </div>
      <div class= "row">
        <%= render "likes/btn", post: @post %>
      </div>
      <div class="row mt-4">
        <%= form_with model: [@post, @post_comment] do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>
      <div class="row mt-4">
        <p>コメント件数：<%= @post.post_comments.count %></p>
      </div>
      <div class="row mt-4">
        <% @post.post_comments.each do |post_comment| %>
          <div class="col-1">
            <%= image_tag post_comment.user.get_user_image(70,70) %>
          </div>
          <div class="col-11">
            <div class="row ml-2">
              <%= post_comment.user.name %>
              <%= post_comment.created_at.strftime('%Y/%m/%d') %>
            </div>
            <div class="row ml-2">
              <%= post_comment.comment %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>