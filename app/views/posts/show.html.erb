<h1>投稿詳細</h1>
  <h2>タイトル</h2>
  <p><%= @post.title %></p>

  <h2>本文</h2>
  <p><%= @post.body %></p>

  <h2>投稿画像</h2>
  <% if @post.post_image.attached? %>
    <%= image_tag @post.post_image, size: "50x50" %>
  <% end %>
  
  <%= link_to "編集", edit_post_path(@post.id) %>

  <%= link_to "削除", post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>