<div class="container d-flex justify-content-center mt-4">
  <h2>投稿詳細</h2>
</div>

<div class="card-list-container py-5">
  <div class="card w-50 mx-auto mt-4 mb-4 shadow-lg">
    <div class="card-body">
      <div class="row">
        <div class="col-9">
          <p class="card-text"><strong><%= @post.title %></p></strong>
          <p class="card-text"><%= @post.body %></p>
        </div>    
        <div class="col-3">
          <% if @post.post_image.attached? %>
            <%= image_tag @post.post_image, size: "170x170" %>
          <% else %>
            <%= image_tag 'no_image', size: "170x170" %>
          <% end %>
        </div>
      </div>
      <% if current_store == @post.store %>
        <div class="row d-flex justify-content-end align-items-end mt-4 mr-3">
          <div class="edit mr-2">
            <%= link_to "編集", edit_post_path(@post.id) %> 
          </div>
          <div class="delete">
            <%= link_to "削除", new_store_registration_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
          </div>
        </div>
      <% end %>
      <div class= "row">
        <span><i class="fa-solid fa-tag"></i>カテゴリー：<%= @post.category%></span>
      </div>
      <div class= "row mt-4">
        <%= render "likes/btn", post: @post %>
      </div>
      <div class="row mt-4">
        <% if user_signed_in? || store_signed_in? %>
          <%= form_with model: [@post, @post_comment] do |f| %>
            <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
            <%= f.submit "送信する" %>
          <% end %>
        <% else %>
          <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
        <% end %>
      </div>
      <div class="row mt-4">
        <p>コメント件数：<%= @post.post_comments.count %></p>
      </div>
      <div class="row mt-4">
        <% @post.post_comments.each do |post_comment| %>
          <div class="col-1 mb-4">
            <%= image_tag post_comment.user.get_user_image(70,70) %>
          </div>
          <div class="col-11">
            <div class="row ml-2">
              <%= post_comment.user.name %>
              <%= post_comment.created_at.strftime('%Y-%m-%d') %>
            </div>
            <div class="row ml-2">
              <%= post_comment.comment %>
            </div>
            <% if current_user == post_comment.user %>
              <div class="row d-flex justify-content-end align-items-end mt-4 mr-3">
                <div class="edit mr-2">
                  <%= link_to "編集", post_post_comment_path(@post, post_comment), method: :edit %> 
                </div>
                <div class="delete">
                  <%= link_to "削除", post_post_comment_path(@post, post_comment), method: :delete, "data-confirm" => "本当に削除しますか？" %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>