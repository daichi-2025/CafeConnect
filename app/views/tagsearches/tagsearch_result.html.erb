<div class="d-flex justify-content-end mt-4 mb-2 mr-4">
  <%= render 'tagsearches/tagsearch'%>
</div>

<table class="table table-hover table-inverse">
  <tbody>
    <% if @posts.present? %>
      <div class="container d-flex justify-content-center mt-4">
        <h2>カテゴリー検索結果一覧：<%= @word %></h2>
      </div>
      <% @posts.each do |post| %> 
        <div class="card-list-container py-5">
          <div class="card w-50 mx-auto mt-4 shadow-lg">
            <div class="card-body">
              <div class="row">
                <div class="col-10">
                  <p class="card-text">タイトル：<%= post.title %></p>
                  <p class="card-text">本文：<%= post.body %></p>
                </div>
                <div class="col-2">
                  <% if post.post_image.attached? %>
                    <%#= image_tag post.post_image, size: "20x20" #%>
                    <%= image_tag post.post_image, class: "card-img-top"; %>
                  <% end %>
                </div>
              </div>
              <div class="row">
                <div class="col-2">
                  <%= image_tag post.store.get_store_image(80,80), class: "mt-3 rounded-circle"; %>
                </div>
                <div class="col-10">
                  <p class="card-title mt-4">
                  <%= link_to(store_path(post.store.id), class: "text-dark") do %>
                    <strong><i class="far fa-flag"></i><span><%= post.store.store_name %></span></strong>
                  <% end %>
                </div>
              </div>
              <div class="row d-flex justify-content-end align-items-end mr-3 mb-3">
                <div class="category mr-4">
                  <span><i class="fa-solid fa-tag"></i>カテゴリー：</span><%= post.category %>
                  <%#=link_to post.category, tagsearches_search_path(content:@post.category) #%>  
                </div>
                <div class="comment mr-4">
                  <%= link_to "#{post.post_comments.count} コメント", post_path(post.id), class: "text-dark" %>
                </div>
                <div class="like">
                  <%= render "likes/btn", post: post %>
                </div>
              </div>
            </div>
          </div>
        </div> 
      <% end %>
    <% else %>
      <div class="container d-flex justify-content-center mt-4">
        <h2>カテゴリー検索結果一覧：<%= @word %></h2>
      </div>
      <div class="container d-flex justify-content-center mt-4">
        <p>検索結果がありません</p>
      </div>
    <% end %>
  </tbody>
</table>
