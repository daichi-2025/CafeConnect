<h1>ユーザー情報編集画面</h1>

<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>

  <h4>画像</h4>
  <%= f.file_field :user_image, accept: "image/*" %>

  <h4>ユーザー名</h4>
  <%= f.text_field :name %>
  
  <h4>ユーザーメールアドレス</h4>
  <%= f.text_field :email %>
  
  <%= f.submit '保存' %>
  
<% end %>