<main>
  <h1>ユーザー登録情報</h1>

  <h2>ユーザー情報</h2>
    <% if user_signed_in? %>
      <table>
        <tbody>
          <tr>
            <td>
              <% if @user.user_image.attached? %>
                <%= image_tag @user.user_image, size: "100x100" %>
              <% else %>
                <%= image_tag 'no_image', size: "100x100" %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>ユーザー名</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
        </tbody>
      </table>
    <% end %>

  <%= link_to "編集", edit_user_path(@user.id) %>

  <%= link_to "退会", user_path(@user.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>

</main>