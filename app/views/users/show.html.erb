<main>
  <div class="container d-flex justify-content-center mt-4">
    <h2>ユーザー詳細</h2>
  </div>
  <div class="card-list-container py-5">
    <div class="card w-50 mx-auto mt-4 mb-4 shadow-lg">
      <div class="card-body">
        <div class="row">
          <div class="col-4">
            <% if @user.user_image.attached? %>
              <%= image_tag @user.user_image, size: "200x200" %>
            <% else %>
              <%= image_tag 'no_image', size: "200x200" %>
            <% end %>
          </div>    
          <div class="col-8">
            <p class="card-text">ユーザー名：<%= @user.name %></p>
            <p class="card-text">メールアドレス：<%= @user.email %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container d-flex justify-content-center mt-4">
    <h2>コメント一覧</h2>
  </div>
      <div class="card-list-container py-1">
        <div class="card w-50 mx-auto mt-4 shadow-lg">
          <div class="card-body">
            <div class="row">
              <% if @user.post_comments.present? %>
                <% @user.post_comments.each do |post_comment| %>
                  <div class="col-12">
                    <div class="row ml-2">
                      <%= post_comment.created_at.strftime('%Y/%m/%d') %>
                    </div>
                    <div class="row ml-2">
                      <%= post_comment.comment %>
                    </div>
                    <div class="row ml-2 d-flex justify-content-end align-items-end mr-2">
                      <div class="accept mr-4">
                        <span>公開中  |  非公開中</span>
                      </div>
                      <div class="post_show mr-2">
                        <%= link_to "投稿詳細", post_path(@post.id), class: "text-dark" %>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% else %>
                <p>コメントはまだありません。</p>
              <% end %>  
            </div>
          </div>
        </div>
      </div>
  </div>
</main>

