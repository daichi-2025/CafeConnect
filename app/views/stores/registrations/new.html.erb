<div class="d-flex justify-content-center mt-4">  
  <div class="container">
    <div class= "row">
      <h2>Sign up for Stores</h2>
    </div>
    <div class= "row">
      <%= form_with model: @store, url: store_registration_path, id: 'new_store', class: 'new_store' do |f| %>
        <%= render "stores/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :store_name %><br>
          <%= f.text_field :store_name %>
        </div>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        <div class="actions mt-4">
          <%= f.submit "Sign up"%>
        </div>
        <%= render "stores/shared/links" %>
      <% end %>
    </div>
  </div>
</div>
