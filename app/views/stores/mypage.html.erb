
<main>
  <h1>店舗マイページ</h1>
  
  <h2>Store info</h2>
    <% if store_signed_in? %>
      <%# if @store.id == current_store.id #%>
        <table>
          <tbody>
            <tr>
              <th>店舗名</th>
              <td><%#= @store.store_name #%></td>
            </tr>
            <tr>
              <th>メールアドレス</th>
              <td><%#= @store.email #%></td>
            </tr>
          </tbody>
        </table>
      <%# end #%>
    <% end %>
  <%# 店舗情報編集ボタン #%>

  <h2>新規投稿<h2>
    <%= form_with model: @post do |f| %>
      <%= f.text_field :title %>
      <%= f.text_area :body %>
      <h6>投稿画像</h6>
      <%= f.file_field :post_image, accept: "image/*" %>
      <%= f.submit '投稿' %>
    <% end %>

   
  <h2>投稿一覧<h2>
    <% if @posts.present? %>
      <% @posts.each do |post| %>
        <div>
          <p><%= post.title %></p>
          <% if post.post_image.attached? %>
            <%= image_tag post.post_image, size: "50x50" %>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <p>投稿はまだありません。</p>
    <% end %>

    <%# 投稿詳細ボタン #%>
</main>

