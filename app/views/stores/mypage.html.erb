
<main>
  <h1>店舗マイページ</h1>
  
    <% if store_signed_in? %>
      <table>
        <tbody>
          <tr>
            <td>
              <% if @store.store_image.attached? %>
                <%= image_tag @store.store_image, size: "100x100" %>
              <% else %>
                <%= image_tag 'no_image', size: "100x100" %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>店舗名</th>
            <td><%= @store.store_name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @store.email %></td>
          </tr>
          <tr>
            <th>店舗電話番号</th>
            <td><%= @store.phone_number %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @store.address %></td>
          </tr>
          <tr>
            <th>店舗URL</th>
            <td><%= @store.store_url %></td>
          </tr>
          <tr>
            <th>店舗情報</th>
            <td><%= @store.store_info %></td>
          </tr>
        </tbody>
      </table>
    <% end %>

  <%= link_to "編集", edit_store_path(@store.id) %>


  <div class="container">
    <div class="row no-gutters">
      <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
        <h5 class="text-dark bg-light p-4 mb-0">新規投稿フォーム</h5>
        <div class="form-body p-4">
          <% if @post.errors.any? %>
            <ul class="alert alert-danger" role="alert">
              <h6 class="alert-heading">
                <%= @post.errors.count %>件のエラーが発生しました
              </h6>
              <% @post.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
          <%= form_with model: @post do |f| %>
            <div class="input-group mb-3 mt-4">
              <div class="input-group-prepend">
                <span class="input-group-text" aria-hidden="true"><i class="fas fa-building"></i></span>
              </div>
              <%= f.text_field :title, class: "form-control", placeholder: "タイトル" %>
            </div>
            <%= f.text_area :body, class: "form-control", rows: "3", placeholder: "本文" %>
            <hr>
            <%= f.file_field :image, accept: "image/*", class: "w-100" %>
            <%= f.submit '投稿', class: "btn btn-lg btn-block btn-info mt-4" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
   
  <h2>投稿一覧<h2>
    <% if @posts.present? %>
      <% @posts.each do |post| %>  
        <div class="card-list-container py-5">
          <div class="card w-50 mx-auto mt-4 shadow-lg">
            <div class="card-body">
              <div class="row">
                <div class="col-10">
                  <p class="card-text">タイトル：<%= post.title %></p>
                  <p class="card-text">本文：<%= post.body %></p>
                </div>
                <div class="col-2">
                  <% if post.post_image.attached? %>
                    <%#= image_tag post.post_image, size: "20x20" #%>
                    <%= image_tag post.post_image, class: "card-img-top"; %>
                  <% end %>
                </div>
              </div>
              <div class="row">
                <div class="col-8">
                </div>
                <div class="col-4">
                  <p class="card-title">
                    <span><%= link_to "投稿編集", edit_post_path(post.id), class: "text-dark" %></span>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
     <% end %>
    <% else %>
      <p>投稿はまだありません。</p>
    <% end %>


  <h2>投稿一覧<h2>
    <% if @posts.present? %>
      <% @posts.each do |post| %>
        <div>
          <p><%= post.title %></p>
          <% if post.post_image.attached? %>
            <%= image_tag post.post_image, size: "50x50" %>
          <% end %>
        </div>
        <%= link_to "投稿詳細", post_path(post.id)%>
      <% end %>
    <% else %>
      <p>投稿はまだありません。</p>
    <% end %>
    <p><%#= link_to "#{@post.post_comments.count} コメント",post_path(@post.id) #%></p>
</main>

