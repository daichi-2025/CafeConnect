<h1>店舗情報編集画面</h1>

<%= form_with model: @store, url: store_path(@store.id), method: :patch do |f| %>

  <h4>画像</h4>
  <%= f.file_field :store_image, accept: "image/*" %>

  <h4>店舗名</h4>
  <%= f.text_field :store_name %>
  
  <h4>店舗メールアドレス</h4>
  <%= f.text_field :email %>

  <h4>店舗電話番号</h4>
  <%= f.text_field :phone_number %>

  <h4>住所</h4>
  <%= f.text_field :address %>

  <h4>店舗URL</h4>
  <%= f.text_field :store_url %>

  <h4>店舗情報</h4>
  <%= f.text_area :store_info %>
  
  <%= f.submit '保存' %>
  
<% end %>