<div class="container">
  <div class="row d-flex justify-content-center my-4">
    <h2>管理者マイページ</h2>
  </div>

  <% if admin_signed_in? %>
    <div class="row d-flex justify-content-center">
      <div class="col-10 col-sm-8">
        <div class="card mx-auto shadow-lg">
          <div class="card-body">
            <% if @admin.present? %>
              <div class="row">
                <div class="col-12 col-sm-4 mb-2 text-center">
                  <% if @admin.admin_image.attached? %>
                    <%= image_tag @admin.admin_image, size: "150x150" %>
                  <% else %>
                    <%= image_tag 'no_image.jpg', size: "150x150" %>
                  <% end %>
                </div>    
                <div class="col-12 col-sm-8 mt-3 mt-sm-3">
                  <p class="card-text"><i class="fa-solid fa-user mr-2"></i><%= @admin.admin_name %></p>
                  <p class="card-text"><i class="fa-solid fa-envelope mr-2"></i><%= @admin.email %></p>
                </div>
              </div>
              <div class="row d-flex justify-content-end align-items-end mt-4 mr-2">
                <%= link_to "編集", edit_admin_admin_path(@admin.id) %>
                <%#= link_to "退会", admin_path(@admin.id), method: :delete, "data-confirm" => "本当に削除しますか？" "%>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
