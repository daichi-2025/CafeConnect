<div class="d-flex justify-content-end mt-4 mb-2 mr-4">
  <%= render "admin/searches/search", category_name: "店舗名", search_method: "store" %>
</div>

<div class="container d-flex justify-content-center my-4">
  <h2>店舗一覧</h2>
</div>

<div class="container d-flex justify-content-center mt-4 mb-2">
  <%= link_to '新しい順', admin_stores_path(latest: "true"), class: "mr-1" %>
  |<%= link_to '古い順', admin_stores_path(old: "true"), class: "mx-1" %>
  |<%= link_to 'お気に入りの多い順', admin_stores_path(favorite_count: "true"), class: "ml-1"  %>
</div>

<div class="col-md-10 offset-md-1">
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>店舗名</th>
        <th class="d-none d-sm-table-cell">住所</th>
        <th class="d-none d-sm-table-cell">URL</th>
        <th class="d-none d-sm-table-cell colspan="3""></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @stores.each do |store| %>
        <tr>
          <th>
            <% if store.store_image.attached? %>
              <%= image_tag store.store_image, size: "80x80" %>
            <% end %>
          </th>
          <th class="align-middle">
            <%= link_to admin_store_path(store.id), class: "text-dark" do %>
              <strong><span><%= store.store_name %></span></strong>
            <% end %>
          </th>
          <th class="d-none d-sm-table-cell align-middle">
            <span style="display: inline-block; max-width: 300px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
              <%= store.address %>
            </span>
          </th>
          <th class="d-none d-sm-table-cell align-middle">
            <span style="display: inline-block; max-width: 300px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
              <%= store.store_url %>
            </span>
          </th>
          <th class="d-none d-sm-table-cell align-middle">
            <%= link_to favorites_admin_store_path(store) do %>
              <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
              <%= store.favorites.count %> お気に入り
            <% end %>
          </th>
          <th class="align-middle">
            <%= link_to '削除', admin_store_path(store), method: :delete, data: { confirm: '本当にこの店舗を削除しますか？' } %> 
          </th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

