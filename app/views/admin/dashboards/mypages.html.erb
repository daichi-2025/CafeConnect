<main>
  <div class="container d-flex justify-content-center mt-4">
    <h2>管理者マイページ</h2>
  </div>

  <% if admin_signed_in? %>
    <div class="card-list-container py-5">
      <div class="card w-50 mx-auto mt-4 mb-4 shadow-lg">
        <div class="card-body">
          <% if @admin.present? %>
            <div class="row">
              <div class="col-4">
                <% if @admin.admin_image.attached? %>
                  <%= image_tag @admin.admin_image, size: "150x150" %>
                <% else %>
                  <%= image_tag 'no_image', size: "150x150" %>
                <% end %>
              </div>    
              <div class="col-8">
                <p class="card-text">管理者名：<%= @admin.admin_name %></p>
                <p class="card-text">メールアドレス：<%= @admin.email %></p>
              </div>
            </div>
            <div class="row d-flex justify-content-end align-items-end mt-4 mr-2">
              <%= link_to "編集", edit_admin_path(@admin.id) %>
              <%#= link_to "退会", admin_path(@admin.id), method: :delete, "data-confirm" => "本当に削除しますか？" "%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</main>