<div class="container d-flex justify-content-center mt-4">
  <h2><%= @store.store_name %>をお気に入りしているユーザー</h2>
</div>

<div class="col-md-10 offset-md-1">
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>ユーザー名</th>
        <th>メールアドレス</th>
        <th>お気に入り店舗</th>
        <th colspan="3">※フェーズ3で実装予定↓</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th>
            <% if user.user_image.attached? %>
              <%= image_tag user.user_image, size: "50x50" %>
            <% else %>
              <%= image_tag 'no_image', size: "50x50" %>
            <% end %>
          </th>
          <th class="align-middle">
            <%= link_to admin_user_show_dashboards_path(user.id), class: "text-dark" do %>
              <strong><span><%= user.name %></span>
            <% end %>
          </th>
          <th class="align-middle">
            <%= user.email%>
          </th>
          <th class="align-middle">
            〇
          </th>
          <th class="align-middle">
            公開中 | 非公開中
          </th>
          <th class="align-middle">
            <%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' } %> 
          </th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% @users.each do |user| %>
  <div class="card-list-container py-2">
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <div class="card-body">
        <div class="row">
          <div class="col-3">
            <% if user.user_image.attached? %>
              <%= image_tag user.user_image, size: "70x70" %>
            <% else %>
              <%= image_tag 'no_image', size: "70x70" %>
            <% end %>
          </div>
          <div class="col-9">
            <p class="card-text"><%= user.name %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>