<div class="d-flex justify-content-end mt-4 mb-2 mr-4">
  <%= render "searches/search" %>
</div>

<div class="container d-flex justify-content-center mt-4">
  <h2>ユーザー一覧</h2>
</div>

<% @users.each do |user| %>
  <div class="card-list-container py-5">
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <div class="card-body">
        <div class="row">
          <div class="col-3">
            <% if user.user_image.attached? %>
              <%= image_tag user.user_image, size: "100x100" %>
            <% else %>
              <%= image_tag 'no_image', size: "100x100" %>
            <% end %>
          </div>
          <div class="col-9">
            <%= link_to(user_path(user.id), class: "text-dark") do %>
              <strong><span><%= user.name %></span></strong>
            <% end %>
            <p class="card-text"><%= user.email%></p>
          </div>
        </div>
        <div class="row d-flex justify-content-end align-items-end mr-2">
          <%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' } %> 
        </div>
      </div>
    </div>
  </div>
<% end %>