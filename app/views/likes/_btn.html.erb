<% if user_signed_in? %>
  <% if post.user_liked_by?(current_user) %>
    <%= link_to post_likes_path(post), method: :delete do %>
      <i class="fa-solid fa-thumbs-up" aria-hidden="true" style="color: red;"></i>
      <%= post.likes.count %> いいね
    <% end %>
  <% else %>
    <%= link_to post_likes_path(post), method: :post do %>
      <i class="fa-solid fa-thumbs-up" aria-hidden="true"></i>
      <%= post.likes.count %> いいね
    <% end %>
  <% end %>
<% elsif store_signed_in? %>
  <% if post.store_liked_by?(current_store) %>
    <%= link_to post_likes_path(post), method: :delete do %>
      <i class="fa-solid fa-thumbs-up" aria-hidden="true" style="color: red;"></i>
      <%= post.likes.count %> いいね
    <% end %>
  <% else %>
    <%= link_to post_likes_path(post), method: :post do %>
      <i class="fa-solid fa-thumbs-up" aria-hidden="true"></i>
      <%= post.likes.count %> いいね
    <% end %>
  <% end %>
<% end %>